{% extends "base.html.twig" %}

{% block title %} Créer une pizza {% endblock %}

{% block body %}

<h1>Créer une pizza</h1>

<div class='jumbotron'>
    <h1 class='text-center'>ma liste de Pizzas</h1>
    <p class='text-center'>Bootstrap is the most popular HTML, CSS...</p>

    <a class=' btn btn-info' href={{ path("pizzaAll") }}>retour liste des Pizza</a>
    <!-- use path with the name ... you can change the route  ...no problem -->
</div>

<div class='container'>




    <div class='col-sm-4 col-md-4'>
        <form action={{ path('insertOnePizza') }} method="POST">

            <div class="form-group">
                <input class="form-control" type="file" name="photo" id="photo">
            </div>

            <div class='description'>
                <div class="form-group">
                    <label>Désignation :</label>
                    <input type="text" class="form-control" name="designation" id="designation"
                        placeholder="Nom de la pizza">


                    <label>Tarif (euros):</label>
                    <input type="text" class="form-control" name="tarif" id="tarif" placeholder="Prix de la pizza">

                    <input class="btn btn-primary" type="submit" value="Modifier dans la base">
                </div>

        </form>
    </div>


</div>

{% endblock %}